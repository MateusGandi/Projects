@{
    ViewData["Title"] = "Agendar";
} 
<style>
    main {
        // background: green;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .div_home_page, .button_group_e {
        width: 100%;
        max-width: 500px;
        min-height: 500px;
        margin: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        align-content: center;
    }
    button {
        margin: 5px;
        width: 100%;
        color: #fff;
        border-radius: 5px;
        padding: 5px;
        border: none;
    }

    .navbar-toggler {
        width: 45px;
    }

    button:hover {
        opacity: 50%;
    }

    .ag_center {
        background: #fff;
        border-radius: 10px;
        max-height: 500px;
        border: 1px solid gray;
    }
    .green {
        background: #00D16D;
    }

    .blue {
        background: #00A3FF;
    }

    .yellow {
        background: #FFBB44;
    }

    .gray {
        background: #D1D1D1;
    }
    .li_from_nav_ag {
        border-bottom: 3px solid #00A3FF;
    }
    .item_ag{
        width: 90%;
    }
    /* Estilos para o container do formulário */
    .form-container {
        display: flex;
        flex-wrap: wrap; /* Para quebrar a linha quando necessário */
        justify-content: space-between; /* Espaço entre os elementos */
        max-width: 400px; /* Defina o tamanho máximo do quadrado */
        margin: 0 auto; /* Centralizar na página */
        padding: 10px; /* Espaçamento interno */
    }

    /* Estilos para cada item do formulário */
    .form-item {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
        width: 49%;
    }


    /* Estilos para os campos de entrada e select */
    .form-item input,
    .form-item select,
    .form-item textarea {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Estilos específicos para o campo textarea */
    .form-item textarea {
        resize: vertical; /* Permite redimensionar verticalmente */
        min-height: 80px; /* Altura mínima para o campo textarea */
    }

    .form-container textarea {
        min-width: 380px;
        width: 100% !important;
    }

    .confirm_t{
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .data_ag{
        font-size: 20px;
    }

    .item:first-child {
        align-self: flex-start;
        width: 100%;
        text-align: center;
    }

    /* Centralizar os demais elementos verticalmente */
    .item:not(:first-child) {
        margin-top: auto;
        margin-bottom: auto;
    }
</style>
<div class="div_home_page ag_center">
    <p>Realizar agendamento</p>
    <p>Favor, fornecer dados para agendamento...</p>
    <div class="form-container">
        <div class="form-item">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Seu nome">
        </div>

        <div class="form-item">
            <label for="servico">Serviço:</label>
            <select id="servico" name="servico">
                <option value="0">Selecione...</option>
                <option value="at1">Prestação de Seviços</option>
                <option value="at2">Atualização cadastral</option>
                <option value="at3">Incrição em processo</option>
                <!-- Adicione outras opções aqui -->
            </select>
        </div>

        <div class="form-item">
            <label for="horario">Horário:</label>
            <select id="horario" name="horario">
                <option value="0">Selecione...</option>
                <option value="1230">12:30</option>
                <option value="1300">13:00</option>
                <option value="1330">13:30</option>
                <!-- Adicione outras opções aqui -->
            </select>
        </div>

        <div class="form-item">
            <label for="data">Data:</label>
            <input type="date" id="data" name="data">
        </div>

        <div class="form-item">
            <label for="descricao">Descrição:</label>
            <textarea id="descricao" name="descricao" placeholder="Informações adicionais..."></textarea>
        </div>
    </div>
    <div class="button_group_e item_ag">
        <button class="blue"><b>CONFIRMAR AGENDAMENTO</b></button>
    </div>
</div>
<div class="div_home_page ag_center confirm_t">
    <p class="title_p item">Confirmação do agendamento</p>
    <p class="data_ag item">12:30 - 05/08/2023</p>
    <p class="logo_frame item"><img src="~/source/symbol_yes.png" /></p>
    <p class="status item">Agendamento realizado com sucesso!</p>
</div>
